{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<h1 class="text-primary">Soirées près de chez vous</h1>
<form action="" method="">
    <div class="container">
        <div class="row">
            <div class="col-11 align-self-center">
                <input class="form-control" type="text" placeholder="Search" aria-label="Search">
            </div>
            <div class="col-1">
                <button type="button" class="btn" onclick="SearchVisibility()"><i class="fa fa-sort-desc fa-4x" aria-hidden="true" id="BtnFilter"></i></button>
            </div>
        </div>
    </div>
    <div class="container-fluid border mt-3 mb-5" style="display:none" id="BarFilter">
        <div class="row mt-3">
            <div class="col-md-8">
                <select class="form-control">
                    <option selected>Site</option>
                    <option>unSite</option>
                </select>
                <div class="mt-3 mb-3">
                    <div class="row">
                        <div class="col-6">
                            <label for="colFormLabel" class="col-form-label">Entre: </label>
                            <input type="date" class="form-control">
                        </div>
                        <div class="col-6">
                            <label for="colFormLabel" class="col-form-label">Et: </label>
                            <input type="date" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                    <label class="form-check-label" for="defaultCheck1">
                        Sorties dont je suis l'organisateur/trice
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                    <label class="form-check-label" for="defaultCheck1">
                        Sorties auxquelles je suis inscrit/e
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                    <label class="form-check-label" for="defaultCheck1">
                        Sorties auxquelles je ne suis pas inscrit/e
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                    <label class="form-check-label" for="defaultCheck1">
                        Sorties passées
                    </label>
                </div>
            </div>
        </div>
        <button type="submit" class="btn border mb-3">Rechercher</button>
    </div>
</form>    

    <div class="sortiesContainer flex-wrap container d-flex col-12 m-0 p-3">
    {% for event in events %}
     <a class="sortie_item m-3 p-3 col-12 col-md-3 col-xl-2 rounded" href="{{ path('event_detail', {id: event.id}) }}" "text-white col-2 d-flex align-items-center justify-content-center">
            <img src="{{asset('/uploads/images/event/')}}{{event.photo}}" class="w-100" alt="miniature sortie"/>
            <div class="p-3 bg-white">
                <h4 class="text-primary">{{ event.name }}</h4>
                <div>{{ event.description }}</div>
            </div>
    </a>
        {% endfor %}
    </div>



{% endblock %}
