{% extends 'base.html.twig' %}
{% block title %}
    Sortie
{% endblock %}
{% block body %}
    <h1>
        Sortie
    </h1>
    <div class="container col-12 m-0 row">
        <div class="gauche col-12 col-md-4">
            <div class="mt-3">
                <img class="img-fluid" src="{{ asset('/uploads/images/event/') }}{{ event.photo }}" alt="photo evenement" />
            </div>
            <div class="mt-3">
                
            </div>
        </div>
        <div class="droite col-12 col-md-8">
            <div class="mt-3 text-primary font-weight-bold text-uppercase">
                {{ event.name }}
            </div>
            <div class="mt-3">
                Le 
                {{ event.beginAt | date('d-m-Y à H:i') }}
            </div>
            <div class="mt-3">
                Date limite d'inscritpion : 
                {{ event.limitInscriptionAt | date('d-m-Y') }}
            </div>
            <div class="mt-3">
                Nombre de places : 
                {{ event.inscriptionMax }}
            </div>
            <div class="mt-3">
                Durée : 
                {{ event.duration }}
                minutes
            </div>
            <div class="mt-3">
                Description et infos : 
            </div>
            <div class="mt-3">
                {{ event.description }}
            </div>
            <div class="mt-3">
                Organisation : 
                {{ event.owner.site.name }}
            </div>
            <div class="mt-3 text-primary font-weight-bold text-uppercase">
                Lieu :
            </div>
            <div class="mt-3">
                {{ event.location.name }}
            </div>
            <div class="mt-3">
                {{ event.location.adress }}
            </div>
            <div class="mt-3">
                {{ event.location.city.zipCode }}
                {{ event.location.city.name }}
            </div>
            <div class="mt-3">
                Latitude : 
                {{ event.location.latitude }}
            </div>
            <div class="mt-3">
                Longitude : 
                {{ event.location.latitude }}
            </div>
        </div>
        <div class="container col-12 m-0 row">
            <div class="mt-3">
                Ici bientôt la liste des participants
            </div>
        </div>
    </div>
{% endblock %}
