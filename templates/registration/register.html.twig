{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>


    <div class="form_container d-flex justify-content-center">
    <div class="col-12 col-md-6 col-xl-4">
    {{ form_start(registrationForm, {'attr': {'id': 'registrationForm'}})  }}
                <div class="form-outline mb-3">
                <label class="form-label" for="form3Example1cg">Pseudo</label>
                    {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
                  {# <input type="text" id="form3Example1cg" class="form-control" /> #}
                </div>

                <div class="form-outline mb-3">
                <label class="form-label" for="form3Example1cg">Prénom</label>
                    {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
                  {# <input type="text" id="form3Example1cg" class="form-control" /> #}
                </div>

                <div class="form-outline mb-3">
                <label class="form-label" for="form3Example1cg">Nom</label>
                    {{ form_widget(registrationForm.surname, {'attr': {'class': 'form-control'}}) }}
                  {# <input type="text" id="form3Example1cg" class="form-control" /> #}
                </div>

                <div class="form-outline mb-3">
                <label class="form-label" for="form3Example1cg">Email</label>
                    {{ form_widget(registrationForm.mail, {'attr': {'class': 'form-control'}}) }}
                  {# <input type="email" id="form3Example3cg" class="form-control" /> #}
                </div>

                <div class="form-outline mb-3">
                <label class="form-label" for="form3Example1cg">Mot de passe</label>
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                </div>


                <div class="form-outline mb-3">
                <label class="form-label" for="form3Example1cg">Tel</label>
                    {{ form_widget(registrationForm.tel, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-outline mb-3">
                <label class="form-label" for="form3Example1cg">Ville de rattachement</label>
                                      {{ form_widget(registrationForm.site, {'attr': {'class': 'form-control'}}) }}

                  {# <input type="text" id="form3Example4cdg" class="form-control" /> #}
                </div>


                <div class="form-outline mb-3">
                <label class="form-label" for="form3Example1cg">Ajout d'une photo</label>
                 {{ form_widget(registrationForm.profilePicture, {'attr': {'class': 'form-control'}}) }}
                </div>

               <div class="form-outline mb-3">
                <label class="form-label" for="form3Example1cg">Question secrète : </label>
                                      {{ form_widget(registrationForm.question, {'attr': {'class': 'form-control'}}) }}

                  {# <input type="text" id="form3Example4cdg" class="form-control" /> #}
                </div>

                <div class="form-outline mb-3">
                <label class="form-label" for="form3Example1cg">Réponse :</label>
                    {{ form_widget(registrationForm.reponse, {'attr': {'class': 'form-control'}}) }}
                </div> 

                 <div class="form-outline mb-3">
                <label class="checkbox" for="form3Example1cg">Accepter les conditions</label>
                                      {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'CheckboxType'}}) }}

                  {# <input type="text" id="form3Example4cdg" class="form-control" /> #}
                </div>

    

                <div class="d-flex justify-content-center">
                  <button type="submit" class="btn btn-primary btn-block btn-lg gradient-custom-4 text-body">Enregistrer</button>
                </div>

                <p class="text-center text-muted mt-5 mb-0">Vous avez déjà un compte ? <a href="{{ path('login') }}" class="fw-bold text-body"><u>S'identifier</u></a></p>
  {{ form_end(registrationForm) }}
    </div>
</div>


{% endblock %}

