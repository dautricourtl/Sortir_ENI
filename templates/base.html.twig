<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" >
        <link href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/lux/bootstrap.min.css" rel="stylesheet" >
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" media="screen" type="text/css"  href="style.css"/>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.26.0/axios.js"></script>

        {% block javascripts %}
 
        {% endblock %}
        
        
    </head>
    <body>
    <nav class="col-12 bg-primary row m-0">
        <a href="{{ path('main') }}" class="text-white col-2 d-flex align-items-center justify-content-center">Home</a>
        <div class="col-10 row justify-content-end">
        {% if app.user %}
            <a href="{{ path('app_event', {id: app.user.id}) }}" class="text-white col-2 d-flex align-items-center justify-content-center">Créer une sortie</a>
            <a href="{{ path('profile', {id: app.user.id}) }}" class="text-white col-2 d-flex align-items-center justify-content-center">Profil</a>
            <a href="{{ path('logout') }}" class="text-white col-2 d-flex align-items-center justify-content-center">Deconnexion</a>
        {% else %}
            <a href="{{ path('register') }}" class="text-white col-2 d-flex align-items-center justify-content-center">Inscription</a>
            <a href="{{ path('login') }}" class="text-white col-2 d-flex align-items-center justify-content-center">Connexion</a>
        {% endif %}
 
        </div>
    </nav>

        {% block body %}
        
        {% endblock %}

    <main class="p-3">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash alert-{{ label }}">
                {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        {% block body %}{% endblock %}
        </main>
        <script type="text/javascript" src="script.js"></script>
    </body>
</html>